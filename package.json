{
  "name": "codebuild-slack-notifier",
  "version": "1.1.0",
  "description": "Send CodeBuild & CodePipeline events to Slack",
  "main": "index.ts",
  "type": "module",
  "repository": "git@github.com:fishbrain/codebuild-slack-notifier.git",
  "author": "Erik Dal√©n <erik.gustav.dalen@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "eslint --ext ts,js . && jest",
    "lint": "eslint --ext ts,js .",
    "deploy": "serverless deploy",
    "sls": "sls",
    "build": "tsc",
    "logs:tools:PostUpdateToSlack": "sls logs -f PostUpdateToSlack --region eu-west-1 --stage tools --startTime 10m -t"
  },
  "dependencies": {
    "@slack/web-api": "^5.7.0",
    "aws-sdk": "^2.622.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.43",
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.4",
    "eslint": "^6.8.0",
    "eslint-config-fishbrain-base": "^1.3.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "serverless": "^1.64.0",
    "serverless-iam-roles-per-function": "^2.0.2",
    "serverless-pseudo-parameters": "^2.5.0",
    "serverless-scriptable-plugin": "^1.0.5",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "eslintIgnore": [
    "dist"
  ],
  "eslintConfig": {
    "extends": [
      "eslint-config-fishbrain-base"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  }
}
